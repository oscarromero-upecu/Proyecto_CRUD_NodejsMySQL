<!--Importamos la cabecera  con ejs -->
<!--Incluye el archivo con la sintaxis ejs -->
<%- include ('partials/header.ejs'); %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/actualizar/<%=data.id%>" method="post">
                        <div class="form-group">
                            <input type="text" name="Nombre" value="<%=data.Nombre%>" class="form-control" autofocus>
                            </div>
                            <div class="form-group">
                            <input type="text" name="Direccion" value="<%=data.Direccion%>" class="form-control">
                            </div>
                            <div class="form-group">
                            <input type="text" name="Telefono" value="<%=data.Telefono%>" class="form-control">
                            </div>
                
                            <button type="submit" class="btn btn-sm btn-success">
                            Actualizar cliente
                            </button>
                            <a href="/" class="btn btn-info btn-sm">cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ('partials/footer.ejs'); %>