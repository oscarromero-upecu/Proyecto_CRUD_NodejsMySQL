<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/update/<%= data.id %>" method="POST">
          <div class="form-group">
            <input type="text" name="Nombre" value="<%= data.Nombre%>" placeholder="Nombre" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="Direccion" value="<%= data.Direccion%>" placeholder="Direccion" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="Telefono" value="<%= data.Telefono%>" placeholder="Telefono" class="form-control">
          </div>

          <button type="submit" class="btn btn-primary">
            Guardar Cliente
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>